# 应用配置
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
BASE_URL=http://localhost:3001

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/crm_dev
MONGODB_TEST_URI=mongodb://localhost:27017/crm_test

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_QUEUE_DB=3
REDIS_KEY_PREFIX=crm:
REDIS_SESSION_PREFIX=sess:
REDIS_CACHE_PREFIX=cache:
REDIS_QUEUE_PREFIX=queue:

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
MAX_FILES=10

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_PASSWORD_RESET_MAX=3

# 日志配置
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d
LOG_DIR=./logs

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# API配置
API_VERSION=v1
API_PREFIX=/api

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# 队列配置
QUEUE_REDIS_URL=redis://localhost:6379/3
QUEUE_CONCURRENCY=5

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 开发配置
DEBUG=crm:*
ENABLE_CORS=true
ENABLE_TRUST_PROXY=true

# 生产配置（仅在生产环境使用）
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# CLUSTER_WORKERS=auto

# 第三方服务配置
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# 通知配置
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# 备份配置
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# 分析配置
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# 功能开关
FEATURE_AI_ENABLED=true
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_SEARCH=true